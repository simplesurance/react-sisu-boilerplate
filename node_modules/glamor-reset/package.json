{
  "name": "glamor-reset",
  "version": "3.0.0-3",
  "description": "inline css for component systems",
  "main": "lib/index.js",
  "module": "es6/index.js",
  "author": "Sunil Pai <threepointone@gmail.com>",
  "homepage": "https://github.com/threepointone/glamor",
  "license": "MIT",
  "repository": "https://github.com/threepointone/glamor",
  "scripts": {
    "clean": "rimraf lib es6 umd",
    "build": "npm-run-all -s clean -p build:** -s size",
    "build:lib": "babel src -d lib --presets es2015,stage-0,react",
    "build:es6": "babel src -d es6",
    "build:umd": "mkdirp umd && webpack --config ../../webpack/umd.js",
    "build:umd-prod": "cross-env NODE_ENV=production npm run build:umd",
    "size": "cat umd/index.min.js | gzip | wc -c",
    "prepublish": "npm run build"
  },
  "keywords": [
    "css",
    "inline"
  ],
  "dependencies": {
    "glamor": "^3.0.0-3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^4.0.0",
    "expect": "^1.20.2",
    "expect-jsx": "^2.6.0",
    "karma": "^1.7.0",
    "karma-browserstack-launcher": "^1.1.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-safari-launcher": "^1.0.0",
    "karma-webpack": "^1.8.1",
    "lerna": "^2.0.0-rc.5",
    "mkdirp": "^0.5.1",
    "mocha": "^3.3.0",
    "npm-run-all": "^4.0.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  }
}
